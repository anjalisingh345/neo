<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnquiryActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_centerInParent="true"></ProgressBar>
    <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/colorPrimary"
               android:layout_centerInParent="true"
               app:cardCornerRadius="@dimen/margin_10dp"
               android:outlineSpotShadowColor="@color/black"
               android:outlineAmbientShadowColor="@color/black"
               app:cardElevation="10dp">

               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="@dimen/margin_dp">

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputname"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtname"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="@string/name"
                           android:textSize="20sp"
                           android:inputType="text"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputsurname"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtsurname"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="@string/surname"
                           android:textSize="20sp"
                           android:inputType="text"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputEmail"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtEmail"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="@string/email"
                           android:textSize="20sp"
                           android:inputType="textEmailAddress"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small"

                           />
                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputdob"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtdob"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="Date of Birth"
                           android:textSize="20sp"
                           android:inputType="date"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputgender"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtgender"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="gender"
                           android:textSize="20sp"
                           android:inputType="text"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>


                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputaddress"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtaddress"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="Address"
                           android:textSize="20sp"
                           android:inputType="text"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>


                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputmobile"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtmobile"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="@string/contact"
                           android:textSize="20sp"
                           android:inputType="number"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>


                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputstream"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtstream"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="Stream"
                           android:textSize="20sp"
                           android:inputType="text"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                   </com.google.android.material.textfield.TextInputLayout>

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/inputcollege"
                       android:layout_width="match_parent"
                       android:paddingVertical="2dp"
                       android:layout_height="wrap_content">

                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edtcollege"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:drawablePadding="5dp"
                           android:hint="College"
                           android:textSize="20sp"
                           android:inputType="text"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small"

                           />

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/inputgettoknow"
                           android:layout_width="match_parent"
                           android:paddingVertical="2dp"
                           android:layout_height="wrap_content">

                           <com.google.android.material.textfield.TextInputEditText
                               android:id="@+id/edtgettoknow"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:drawablePadding="5dp"
                               android:hint="Get to Know"
                               android:textSize="20sp"
                               android:inputType="text"
                               android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                       </com.google.android.material.textfield.TextInputLayout>

                   </com.google.android.material.textfield.TextInputLayout>

                   <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                       android:id="@+id/course"
                       android:layout_width="match_parent"
                       android:layout_marginTop="15dp"
                       android:layout_height="40dp"
                       android:padding="16dp"
                       android:paddingVertical="2dp"
                       app:borderWidth="1dp"
                       android:background="@drawable/sppinerbg"
                       app:cornerRadius="8dp">
                       <Spinner
                           android:id="@+id/spinner"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:drawablePadding="5dp"
                           android:gravity="bottom"
                           android:textSize="20sp"
                           android:textAppearance="@style/TextAppearance.AppCompat.Small"
                           android:inputType="text"/>

                   </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

