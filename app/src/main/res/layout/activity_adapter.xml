<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Adapter">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/reletive">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/image"

                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/name"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/image"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="surname"
                android:id="@+id/surname"
                android:layout_toRightOf="@+id/name"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:id="@+id/email"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/image"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth:"
                android:id="@+id/dob"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/email"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DateofBirth"
                android:id="@+id/dob2"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/dob"
                android:layout_below="@+id/email"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gender"
                android:id="@+id/gender"
                android:layout_below="@+id/surname"
                android:layout_toRightOf="@+id/email"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:id="@+id/address"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/dob"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact"
                android:id="@+id/contact"
                android:layout_toRightOf="@+id/address"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_below="@+id/dob"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stream"
                android:id="@+id/stream"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/contact"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="college"
                android:id="@+id/college"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/stream"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gettoknow"
                android:id="@+id/gettoknow"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_below="@+id/course"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/college"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="course"
                android:id="@+id/course"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_below="@+id/contact"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/stream"
                android:layout_marginTop="@dimen/margin_10dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>