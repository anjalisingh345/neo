<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed-light"
        android:id="@+id/sdname">

    </TextView>






    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"

                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/margin_10dp"
                    android:layout_margin="10dp"

                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/studentprofile"
                        android:scaleType="fitXY"
                        android:src="@drawable/profilepic"
                        android:layout_alignParentTop="true"
                        ></ImageView>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"

                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:background="@color/white"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                      >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name - "
                                android:id="@+id/namedeaign"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:id="@+id/name"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="surname"
                                android:id="@+id/surname"
                                android:layout_toRightOf="@+id/name"
                                android:textColor="@color/black"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email - "
                                android:id="@+id/emailheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email"
                                android:id="@+id/email"
                                android:layout_below="@+id/name"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth  - "
                                android:id="@+id/dobheadin"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of Birth:"
                                android:id="@+id/dob"
                                android:layout_toRightOf="@+id/image"
                                android:layout_below="@+id/email"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact  - "
                                android:id="@+id/contactheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="contact"
                                android:textColor="@color/black"
                                android:id="@+id/contact"
                                android:layout_below="@+id/dob"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender  - "
                                android:id="@+id/genderheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="contact"
                                android:textColor="@color/black"
                                android:id="@+id/gender"
                                android:layout_below="@+id/dob"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address  - "
                                android:id="@+id/addressheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1222"
                                android:textColor="@color/black"
                                android:id="@+id/address"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stream  - "
                                android:id="@+id/streamheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CSE"
                                android:textColor="@color/black"
                                android:id="@+id/stream"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="College  - "
                                android:id="@+id/collegeheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TIT"
                                android:textColor="@color/black"
                                android:id="@+id/college"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Course  - "
                                android:id="@+id/courseheaog"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B.tect"
                                android:textColor="@color/black"
                                android:id="@+id/course"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gettoknow  - "
                                android:id="@+id/gettoknowheading"
                                android:layout_toRightOf="@+id/image"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:layout_marginTop="@dimen/margin_10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B.tect"
                                android:textColor="@color/black"
                                android:id="@+id/gettoknow"
                                android:layout_marginTop="@dimen/margin_10dp"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </ScrollView>
</LinearLayout>